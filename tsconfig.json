{
  "include": ["lib/**/*.ts", "rollup.config.ts"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "outDir": ".",

    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true,

    "lib": ["ESNext", "DOM"]
  }
}
