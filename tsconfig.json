{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strict": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false
  }
}